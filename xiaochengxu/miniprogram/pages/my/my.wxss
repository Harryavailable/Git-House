.user_info_wrap{
  margin: 10rpx auto;
  height:500rpx;
  width:96vw;
  position: relative;
  border-radius: 15rpx;
  background-color:rgb(246,246,246);
  box-shadow: 0 0 10rpx rgba(0,0,0,0.6);
}
.user_img_wrap{
height:500rpx;
width:96vw;
margin: center;
margin-top: 10rpx;
position: relative;
}
.user_bg{
  height: 490rpx;
  width: 96vw;
  filter: blur(10rpx);
}
.user_info{
position: absolute;
left: 50%;
transform: translateX(-50%);
top:30%;
text-align: center;
}
.user_icon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user_name{
margin-top: 25rpx;
}
.user_name1{
  font-size:40rpx;
}
.my_logo{
position: absolute;
left:50%;
transform: translateX(-50%);
top:30%;
font-size: 38rpx;
}
.top_title{
margin-bottom: 30rpx;
  font-family: 黑体;
  font-size: larger;
  font-size: 40rpx;
  color:#333;
  font-weight: 600;
  z-index: 3;
}
.banner-xx{ 
  margin: 0 auto;
  margin-top: 50rpx;
  width: 96vw;
  height: 750rpx;
  border-radius: 15rpx;
  background-color:rgb(246,246,246);
  box-shadow: 0 0 10rpx rgb(0,0,0,0.4);
}
.ban-t{
  width: 90%;
  margin: 0 auto;
}
.ban-row{
  width: 100%;
  height: 150rpx;
  padding: 0 15rpx;
  border-bottom:2px solid rgb(122, 122, 122);
}
.ban-row0{
  border-bottom: 0px solid #000;
}
.ban-im{
  width: 100rpx;
  height: 100rpx;
  padding-top: 25rpx;
  float: left;
}
.ban-im image{
  width: 80%;
  height: 80%;
}
.ban-tx{
  float: left; 
  padding-top: 25rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  width: 500rpx;
  text-align: right;
  color: rgb(53, 52, 52);
  font-size: 35rpx;
  font-weight: 700;
}