.header{
  width: 80vw;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx auto;
  padding-top: 20rpx;
}
.header text{
  font-size:20px;
  font-weight:600;
}
.header image{
  width: 80px;
  height: 80px;
}
.body{
  position: relative;
  margin:10rpx auto;
  width: 80vw;
}
.body ul {
  display:flex;
  flex-direction: column;
  justify-content:space-around;
  align-items: center;
}
.body ul li {
  position: relative;
  width:80vw;
  padding: 15rpx;
  height:100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid rgb(245, 202, 191);
  font-size: 18px;
  line-height: 100rpx;
}
.footer{
  font-size: 18px;
  width: 80vw;
  margin: 0 auto;
}
.footer textarea{
  margin-top: 10rpx;
  border:1px solid #ccc;
}
.submit{
  margin-top: 20rpx;
  width: 40vw;
  height: 100rpx;
  background-color:skyblue;
  color: #fafafa;
}

.select_box {
  background-color: #eee;
  padding: 0 10rpx;
  width: 93%;
  position: absolute;
  top: 130rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
}

@keyframes myfirst {
  from {
      height: 0rpx;
  }

  to {
      height: 210rpx;
  }
}

.select_one {
  height: 60rpx;
  font-size: 18px;
  line-height: 60rpx;
  border-bottom: 2px solid rgb(236, 161, 161);
}
.bg1{
  color: red;
}
.bg2{
  color: #000;
}