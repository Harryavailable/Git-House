.load image{
  width: 100%;
  height: 550rpx;
}
button{
background-color:rgb(157, 190, 179);
margin-top:30rpx;
font-size: 18px;
font-weight: 600;
width: 40%;
color:#f0f0f0;
}
.bigbox{
  width: 100vw;
  height:30vh;
  position:relative;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  align-items:center;
}
.card{
  color: #333;
  position: absolute;
  width: 90vw;
  height:400rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  padding-left: 20rpx;
  background: linear-gradient(to right bottom,rgba(226, 147, 202, 0.3),rgba(102, 216, 231, 0.5));
  backdrop-filter: blue(8px);
  box-shadow: 10px 10px 10px rgba(0,0,0,0.2);
  border-top: 1px solid rgba(255,255,255,0.8);
  border-left: 1px solid rgba(255,255,255,0.8);
}
.card_l{
  position: absolute;
  top: 0;
  left: 15rpx;
  width:47vw;
  height: 100%;
  border-right:2px dashed rgb(209, 205, 205);
display: flex;
align-items: center;
}
.card_l ul{
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.card_l ul li {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 8rpx;
}
.card_l .add{
  display: flex;
  justify-content:flex-start;
  height: 100rpx;
}
.card_l .add .txt1{
  display: block;
  width:30%;
  font-size: 15px;
  font-weight: 600;
}
.card_l.add .txt2{
    display: block;
  width:70%;

}
.card_l ul li .txt1{
  font-size: 15px;
  font-weight: 600;
}
.card_r{
  position: absolute;
  padding-left: 10rpx;
  top: 0;
  left: 50vw;
  width:40vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items:center;
}
.card_r .txt1{
  font-size: 15px;
  font-weight: 600;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}
.card_r .txt2{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}