
body{
  background-color: #fff;
}
.box{
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  color: #333;
}
.top{
  position: relative;
  width: 100%;
  height:100vh;
}
.top .img{
  width: 100%;
  height:100vh
}
.nav{
  position: absolute;
  top: 420rpx;
  left:0;
 margin: 40% auto;
 margin-bottom: 40rpx;
  width:60%;
  height:600rpx;
}
.nav ul{
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around;
  align-content: space-around;
  }
.nav li{
  box-sizing: border-box;
  position: relative;
  width: 26%;
  height: 45%;
  font-size: 14px;
  display: flex;
  text-align: center;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.nav li:nth-child(3n){
  margin-right: 0;
}
.nav  li image{
  width:60px;
  height: 60px;
}
.nav .img1{
  width:80px;
  height:83px;
}
text{
  display: block;  width: 100%;
  height: 30%;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.navigation:hover{
transform: translateY(-3px);
background-color:#fff;
}
navigator:hover{
  background-color:#fff;
}
.nav_b{
  position: absolute;
  top: 3%;
  left:3%;
  width:120rpx;
  height: 200px;
background-color:transparent;
background-color:transparent;

}
.nav_b ul{
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.nav_b li {
  margin-bottom: 10rpx;
}
.nav_b  li image{
  margin-left: 20rpx;
